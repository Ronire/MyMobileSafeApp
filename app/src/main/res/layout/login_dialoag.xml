<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/login_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入密码"
        android:background="@color/colorPrimaryDark"/>
    <TextView

        android:id="@+id/login_shezhimima"
        android:layout_below="@id/login_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入密码"/>
    <EditText
        android:layout_below="@id/login_shezhimima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_input"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/login_input">
        <Button
            android:id="@+id/login_yes"
            android:text="确认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/login_no"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>


</RelativeLayout>